{
  "name": "my-portfolio-fullstack",
  "version": "1.0.0",
  "description": "Full-stack portfolio application",
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=backend",
    "create-admin": "npm run create-admin --workspace=backend",
    "install:all": "npm install",
    "lint": "npm run lint --workspace=frontend",
    "preview": "npm run preview --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10"
  },
  "keywords": ["portfolio", "react", "express", "mongodb", "fullstack"],
  "author": "Kelly Burden",
  "license": "ISC"
}
